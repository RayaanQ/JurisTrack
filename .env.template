# Geo-Regulation Compliance System Environment Configuration

# OpenAI API Configuration (Optional - system works with fallback if not provided)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Use Gemini API (Optional)
# GOOGLE_API_KEY=your_gemini_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/compliance.db

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Settings (for development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Analytics and Monitoring (Optional)
ENABLE_ANALYTICS=False

# Rate Limiting (Optional)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=60

# Demo Configuration
DEMO_MODE=True
SAMPLE_DATA_PATH=sample_features.json

# Security (Change in production)
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Feature Flags
ENABLE_BATCH_PROCESSING=True
ENABLE_CSV_EXPORT=True
ENABLE_JARGON_RESOLUTION=True
ENABLE_REGULATION_UPDATES=False